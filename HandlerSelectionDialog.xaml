<platform:DialogWindow
        x:Class="VSIXExtension.HandlerSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:VSIXExtension"
        xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
        xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
        toolkit:Themes.UseVsTheme="True"
        mc:Ignorable="d"
        Title="Select MediatR Handler"
        Width="625"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        HasMaximizeButton="False"
        HasMinimizeButton="False">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message Label -->
        <TextBlock Grid.Row="0" 
                   x:Name="MessageLabel"
                   Margin="0,0,0,8"
                   TextWrapping="Wrap"/>

        <!-- Handler List -->
        <ListBox Grid.Row="1" 
                 x:Name="HandlerListBox"
                 Margin="0,0,0,12"
                 MouseDoubleClick="HandlerListBox_MouseDoubleClick"
                 KeyDown="HandlerListBox_KeyDown"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Name="OkButton"
                    Content="OK"
                    Width="75"
                    Height="23"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Name="CancelButton"
                    Content="Cancel"
                    Width="75"
                    Height="23"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</platform:DialogWindow> 